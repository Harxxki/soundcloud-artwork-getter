{
  "manifest_version": 3,
  "name": "SoundCloud Artwork Getter",
  "version": "1.0",
  "description": "Chrome Extention for Getting Artwork from SoundCloud.",
  "author": "@Harxxki",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "clipboardWrite", "scripting", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content.js"]
    }
  ]
}
